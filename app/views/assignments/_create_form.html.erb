<%= form_for(@assignment) do |f| %>
    <% if @assignment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>

          <ul>
            <% @assignment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :Namn %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :Beskrivning %><br>
      <%= f.text_field :desc %>
    </div>
    <div class="field">
      <%= f.hidden_field :step_id %>
    </div>
    <div class="field">
      <%= f.hidden_field :typex, value: "assignment" %>
    </div>
    <div class="field">
      <%= f.hidden_field :row_order_position, value: position %>
    </div>
    <div class="actions">
      <%= f.button :Skapa, :class => 'form-btn ease' %>
    </div>
<% end %>
