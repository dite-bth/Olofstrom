<div class="row">
<div class="small-12 medium-12 large-12 columns headline">
  <h2>FAQ</h2>
</div>
</div>
<% if current_user.admin? %>
  <%= form_for(@faq) do |f| %>

    <div>
    <%= link_to '<i class="button form-btn tiny">LÃ¤gg till FAQ</i>'.html_safe, new_faq_path(f)%>
    </div>

  <% end %>
<% end %>
<div class="small-12 medium-12 large-12 columns faqrow">
<% @faqs.each do |f| %>

  <div class="field">
    <div class="faqheadline">
    <h5><%= f.frequent_questions%> 
      <% if current_user.admin? %>
      <div class="crud">
        <%= link_to '<i class="fi-x small"></i>'.html_safe, f, method: :delete, data: { confirm: 'Are you sure?' } %>
        <%= link_to '<i class="fi-pencil small"></i>'.html_safe, edit_faq_path(f), method: :get %>
      </div>
    <% end %></h5>
    </div><br>
    <div class="large-12 columns faqanswer-toggle">
      <div class="faqanswer">
      <div class="arrow"></div>
    <p><%= f.frequent_answers.html_safe %></p>
  </div>
  </div>
</div>
    
<% end %> 
</div>