<div class="row">

    <!--  TOPBAR -->
    <div class="medium-12 large-12 columns topbar">
      <input type="text" class="search_form left" placeholder="Sök användare" style="width:300px; margin-left:-15px; height:100%;">
      <div class="bread left"><%= breadcrumbs %></div>
      <% if current_user.admin? %>
          <button id="module_toggle" class="button redbtn ease right">Lägg till modul</button>
      <% end %>
    </div>
    <div class="module_form">
        <%= render :partial => 'module' %>
    </div>
    <div class="medium-12 large-12 columns sliderimg">
      <div class="large-12 columns imageslider"> <%= image_tag("sliderblur.png") %></div>
      <div class="medium-12 large-12 columns slider">Lorem ipsum dolor sit amet, consectetur adipisicing elit. <br>Enim cum harum cumque tempore ducimus autem,<br> non obcaecati reiciendis quo fugiat voluptatum culpa libero maiores <br>  distinctio temporibus quae praesentium nulla officiis <br> iste ea error. Quasi ullam vitae corporis veritatis quaerat, <br> sunt possimus accusamus aliquid sit, et quam unde voluptate minima iure.</div>
    </div>

    <!--    RUBRIK  -->


  </div>


  <!-- MODULER -->
  <div class="row fw contents">
      <div class="large-12 columns moduwrapper">
            <% @categories.each_with_index do |cat, index| %>
      <div class="medium-5 large-5 columns modu">
        <a href="<%= category_path(cat.name) %>">
        <div class="mod-desc" style="background-color:<%= @colors[index%4] %>;">
          <div class="desc-p"><p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Impedit voluptas eveniet animi eum odit quae doloribus fuga voluptatum et ab.
          <%= cat.desc %></p>
          </div>
        </div>
        <div class="mod-headline" style="background-color:<%= @darkcolors[index%4] %>;">
          <div class="headline-p">
            <h1><%= cat.name.titleize %></h1>
          </div>
        </div>

      </a>

        <div class="crud">
          <% if current_user.admin? %>
            <%= link_to '<i class="fi-x small"></i>'.html_safe, delete_category_path(cat.name), method: :delete, data: { confirm: 'Are you sure?' } %>
            <%= link_to '<i class="fi-pencil small"></i>'.html_safe, edit_caturl_path(cat.name), method: :get %>
          <% end %>
              </div>
      </div>

      <% end %>
    <p></p>
    </div>
  </div>
